{
  "name": "ticketer-website",
  "version": "1.3.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "next build",
    "dev": "dotenv -e .env -- bun run dev:services && next dev --turbopack",
    "dev:next": "next dev --turbopack",
    "dev:services": "docker compose up -d",
    "devsafe": "rm -rf .next && next dev",
    "generate:importmap": "payload generate:importmap",
    "generate:types": "payload generate:types",
    "lint": "biome check",
    "format": "biome format --write",
    "typecheck": "tsc --noEmit",
    "payload": "payload",
    "start": "next start",
    "services:start": "docker compose up -d",
    "services:stop": "docker compose down",
    "services:logs": "docker compose logs -f",
    "services:reset": "docker compose down -v && docker compose up -d",
    "services:status": "docker compose ps",
    "email:start": "docker compose up -d inbucket",
    "email:stop": "docker compose stop inbucket",
    "email:logs": "docker compose logs -f inbucket",
    "email:test": "bun run src/scripts/test-email.ts",
    "s3:start": "docker compose up -d minio",
    "s3:stop": "docker compose stop minio",
    "s3:logs": "docker compose logs -f minio",
    "s3:console": "open http://localhost:9002",
    "db:start": "docker compose up -d postgres",
    "db:stop": "docker compose stop postgres",
    "db:logs": "docker compose logs -f postgres",
    "db:reset": "docker compose down -v postgres && docker compose up -d postgres",
    "db:connect": "docker exec -it ticketer-postgres psql -U postgres -d ticketer-website"
  },
  "dependencies": {
    "@daveyplate/better-auth-ui": "^3.2.5",
    "@payloadcms/db-postgres": "3.58.0",
    "@payloadcms/email-nodemailer": "^3.58.0",
    "@payloadcms/email-resend": "^3.58.0",
    "@payloadcms/live-preview-react": "^3.58.0",
    "@payloadcms/next": "3.58.0",
    "@payloadcms/plugin-form-builder": "^3.58.0",
    "@payloadcms/plugin-import-export": "^3.58.0",
    "@payloadcms/plugin-seo": "3.58.0",
    "@payloadcms/richtext-lexical": "3.58.0",
    "@payloadcms/storage-s3": "^3.58.0",
    "@payloadcms/ui": "3.58.0",
    "@react-email/components": "^0.5.5",
    "@react-email/render": "^1.3.1",
    "@rubixstudios/payload-usesend": "^1.1.3",
    "@tanstack/react-table": "^8.21.3",
    "@vercel/analytics": "^1.5.0",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "better-auth": "1.3.24",
    "better-auth-harmony": "^1.2.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "geist": "^1.5.1",
    "graphql": "^16.11.0",
    "html-react-parser": "^5.2.6",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.22",
    "next": "15.5.4",
    "next-themes": "^0.4.6",
    "payload": "3.58.0",
    "payload-auditor": "^1.8.0",
    "payload-auth": "^1.6.4",
    "radix-ui": "^1.4.3",
    "react": "19.1.1",
    "react-day-picker": "^9.11.0",
    "react-dom": "19.1.1",
    "react-medium-image-zoom": "^5.4.0",
    "resend": "^6.1.2",
    "sharp": "0.34.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^22.5.4",
    "@types/react": "19.1.17",
    "@types/react-dom": "19.1.11",
    "dotenv-cli": "^10.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.3",
    "zod": "^4.1.11"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0"
  },
  "patchedDependencies": {
    "payload-auth@1.6.4": "patches/payload-auth@1.6.4.patch"
  }
}
